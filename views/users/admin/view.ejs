<div class="bg-white px-4 py-4">
    <%- include("../../partials/filsDArianeUsers.ejs") %> 

    <div class="row g-3">
        <div class="form-section-header border-info d-flex justify-content-between">
            <div>
                <h3 class="fw-bold text-primary">
                    <i class="bi bi-mortarboard-fill fs-1 me-2"></i>Informations sur l'utilisateur
                </h3>
            </div>
        </div>


        <!-- Civilité -->
        <div class="col-md-2">
            <p class="form-label fw-semibold">Sexe :</p> 
            <span><%= admin.sexe %></span>
        </div>

        <!-- Nom complet -->
        <div class="col-md-3">
            <p class="form-label fw-semibold">Nom</p> 
            <span><%= admin.nom %></span>
        </div>

        <div class="col-md-3">
            <p class="form-label fw-semibold">Prenom :</p> 
            <span><%= admin.prenom %> </span>
        </div>
     <!-- Date de naissance -->
     <div class="col-md-3">
        <p class="form-label fw-semibold">Date de naissance :</p> 
        <span><%= admin.dateNaissance.toLocaleDateString("fr-FR") %></span>
    </div>
        <!-- Email -->
        <div class="col-md-3">
            <p class="form-label fw-semibold">Email :</p> 
            <span><%= admin.email %></span>
        </div>

        <!-- Téléphone -->
        <div class="col-md-3">
            <p class="form-label fw-semibold">Téléphone :</p> 
            <span><%= admin.telephone %></span>
        </div>

        <!-- Adresse -->
        <div class="col-md-3">
            <p class="form-label fw-semibold">Adresse :</p> 
            <span><%= admin.adresse %></span>
        </div>

          <!-- Adresse -->
          <div class="col-md-4">
            <p class="form-label fw-semibold">Poste :</p> 
            <span><%= admin.poste %></span>
        </div>


      
    </div>

    <hr class="mx-4">

    <div class="form-section bg-white">
        <div class="form-section-header border-info">
            <h3 class="fw-bold text-primary">
                <i class="bi bi-gear fs-1 me-2"></i>Actions
            </h3>
        </div>

        <div class="row">
            <div class="col-md-12 d-flex justify-content-start gap-3">
                <a href="/users/etd/edit/<%= admin.identifiant %>" class="btn btn-warning">
                    <i class="bi bi-pen"></i> Modifier
                </a>
                <form action="/users/etd/delete/<%= admin.identifiant %>" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
