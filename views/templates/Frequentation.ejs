        }

        .student-box-body {
            padding: 15px;
            font-size: 15px;
        }

        .info-row {
            margin-bottom: 12px;
            display: flex;
        }

        .info-label {
            font-weight: bold;
            min-width: 200px;
        }

        .info-value {
            flex: 1;
        }

        .signature {
            margin-top: 50px;
            text-align: right;
        }

        .signature-ligne {
            margin-top: 60px;
            border-top: 1px solid #000;
            width: 250px;
            margin-left: auto;
            text-align: center;
            padding-top: 8px;
        }

        /* FOOTER */
        .footer {
            background: #1f4d2b;
            color: #f5d06f;
            text-align: center;
            padding: 10px;
            font-size: 13px;
        }
        
        .cachet {
            margin-top: 20px;
            font-style: italic;
            color: #666;
        }
