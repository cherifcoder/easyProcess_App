            text-align: center;
            position: relative;
        }

        .header img {
            position: absolute;
            left: 20px;
            top: 10px;
            height: 80px;
        }

        .header small {
            display: block;
            color: #fff;
        }

        /* CONTENT */
        .content {
            padding: 40px;
        }

        .info-etablissement {
            text-align: center;
            margin-bottom: 30px;
            line-height: 1.8;
            font-weight: 500;
        }

        .date-objet {
            margin-bottom: 30px;
        }

        .objet {
            font-weight: bold;
            text-transform: uppercase;
            margin: 20px 0;
            border-bottom: 1px solid #d4af37;
            padding-bottom: 5px;
        }

        .title {
            text-align: center;
            font-weight: bold;
            font-size: 22px;
            margin: 25px 0;
            border-top: 2px solid #d4af37;
            border-bottom: 2px solid #d4af37;
            padding: 10px 0;
        }

        .student-box {
            border: 1px solid #1f4d2b;
            margin: 30px 0;
        }

        .student-box-header {
            background: #1f4d2b;
            color: #fff;
            font-weight: bold;
            padding: 6px 10px;
