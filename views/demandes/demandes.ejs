<%- include("../partials/filsDAriane.ejs") %>
<div class="container py-4">
    
        <h1 class="text-center mb-4">Demandes Administratives</h1>
        <p class="text-center text-muted mb-5">Sélectionnez le type de document dont vous avez besoin</p>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4 justify-content-center">

            <!-- Attestation de Fréquentation -->
            <div class="col">
                <a href="/demandes/create/frequentation" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <div
                                    class="badge bg-info-subtle text-info rounded-circle p-3 d-inline-flex align-items-center justify-content-center">
                                    <i class="bi bi-calendar-check fs-3"></i>
                                </div>
                            </div>
                            <h5 class="card-title mb-2">Attestation de Fréquentation</h5>
                            <p class="card-text text-muted small">Obtenez une attestation prouvant votre présence et
                                assiduité aux cours.</p>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Diplôme -->
            <div class="col">
                <a href="/demandes/create/diplome" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <div
                                    class="badge bg-success-subtle text-success rounded-circle p-3 d-inline-flex align-items-center justify-content-center">
                                    <i class="bi bi-award fs-3"></i>
                                </div>
                            </div>
                            <h5 class="card-title mb-2">Diplôme</h5>
                            <p class="card-text text-muted small">Obtenez une attestation officielle de scolarité ou de
                                réussite pour vos démarches administratives.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Fiche de Stage -->
            <div class="col">
                <a href="/demandes/create/stage" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <div
                                    class="badge bg-warning-subtle text-warning rounded-circle p-3 d-inline-flex align-items-center justify-content-center">
                                    <i class="bi bi-briefcase fs-3"></i>
                                </div>
                            </div>
                            <h5 class="card-title mb-2">Fiche de Stage</h5>
                            <p class="card-text text-muted small">Générez votre convention de stage et les documents
                                nécessaires pour votre entreprise.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Lettre de Recommandation -->
            <div class="col">
                <a href="/demandes/create/recommandation" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <div
                                    class="badge bg-secondary-subtle text-secondary rounded-circle p-3 d-inline-flex align-items-center justify-content-center">
                                    <i class="bi bi-envelope fs-3"></i>
                                </div>
                            </div>
                            <h5 class="card-title mb-2">Lettre de Recommandation</h5>
                            <p class="card-text text-muted small">Demandez une lettre de recommandation à vos
                                professeurs
                                pour vos candidatures.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Réclamation -->
            <div class="col">
                <a href="/demandes/create/reclamation" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <div
                                    class="badge bg-danger-subtle text-danger rounded-circle p-3 d-inline-flex align-items-center justify-content-center">
                                    <i class="bi bi-exclamation-triangle fs-3"></i>
                                </div>
                            </div>
                            <h5 class="card-title mb-2">Réclamation</h5>
                            <p class="card-text text-muted small">Signalez un problème concernant vos notes, documents
                                ou
                                services administratifs.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Relevé de Notes -->
            <div class="col">
                <a href="/demandes/create/releve" class="text-decoration-none">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <div
                                    class="badge bg-primary-subtle text-primary rounded-circle p-3 d-inline-flex align-items-center justify-content-center">
                                    <i class="bi bi-file-text fs-3"></i>
                                </div>
                            </div>
                            <h5 class="card-title mb-2">Relevé de Notes</h5>
                            <p class="card-text text-muted small">Consultez et téléchargez votre relevé de notes
                                officiel
                                avec vos moyennes par matière.</p>
                        </div>
                    </div>
                </a>
            </div>




        </div>
</div>