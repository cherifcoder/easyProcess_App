<div class="container py-4">
  <%-include("../partials/filsDAriane.ejs") %>
</div>
<div class="">
  <%-include("../partials/btnAjout") %>
    <div class="form-section bg-white">
      <div class="form-section-header border-info">
        <h3 class="fw-bold text-primary">
          <i class="bi bi-folder2-open fs-1 me-2"></i>Liste des Demandes
        </h3>
      </div>


      <table class="table table-striped table-borderless table-hover table-responsive text-center border-0 shadow p-5">
        <thead>
          <tr>
            <th>No</th>
            <th>Type de demande</th>
            <th>Date</th>
            <th>ID Demande</th>
            <th>Demandeur</th>
            <th>Filiere</th>
            <th>Niveau</th>
            <th>Promotion</th>
            <th>Statut</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% demandes.forEach(demande=> { %>
            <tr>
              <td>
                <%= demande.no %>
              </td>
              <td>
                <%= demande.type %>
              </td>
              <td>
                <%= demande.date.toLocaleDateString() %>
              </td>
              <td>
                <%= demande.identifiant %>
              </td>
              <td>
                <%= demande.demandeur %>
              </td>
              <td>
                <%= demande.filiere %>
              </td>
              <td>
                <%= demande.niveau %>
              </td>
              <td>
                <%= demande.promotion %>
              </td>
              <td
                class="z-0 m-2 badge <%=demande.statut==='En attente'? 'bg-primary-subtle text-primary':demande.statut==='validee'?'bg-success-subtle text-success':demande.statut==='rejetee'?'bg-danger-subtle text-danger':''%> ">
                <%=demande.statut %>
              </td>
              <td>
                <a href="/demandes/<%= demande.type %>/view/<%= demande.identifiant %> "
                  class="badge bg-primary-subtle text-primary rounded-3 px-1 py-1">
                  <i class="bi bi-eye fs-4"></i>
                </a>
                <a href="" class="badge bg-warning-subtle text-warning rounded-3 px-1 py-1">
                  <i class="bi bi-pen fs-4"></i>
                </a>
                <a href="" class="badge bg-success-subtle text-success rounded-3 px-1 py-1">
                  <i class="bi bi-check2-circle fs-4"></i>
                </a>
                <a href="" class="badge bg-danger-subtle text-danger rounded-3 px-1 py-1">
                  <i class="bi bi-x-circle fs-4"></i>
                </a>
                <a action="/demandes/diplome/delete/<%=demande.identifiant %> " method="POST"
                  class="badge bg-danger-subtle text-danger rounded-3 px-1 py-1">
                  <button class="bi bi-trash fs-4 text-danger bg-danger-subtle" data-bs-toggle="modal"
                    data-bs-target="#deleteModal-<%= demande.identifiant %>"> <i></i> </button>

                  <div class="modal fade" id="deleteModal-<%= demande.identifiant %>" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                      <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                          <h5 class="modal-title">Confirmation de suppression</h5>
                          <button type="button" class="btn-close btn-close-white text-primary"
                            data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                          <p>Voulez-vous vraiment supprimer la demande <strong>
                              <%= demande.identifiant %>
                            </strong> ?</p>
                        </div>
                        <div class="modal-footer">
                          <button type="reset" class="btn btn-primary border-0" data-bs-dismiss="modal">Annuler</button>
                          <form action="/demandes/<%= demande.type %>/delete/<%= demande.identifiant %>" method="POST">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>

              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
</div>