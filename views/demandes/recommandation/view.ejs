<div class="bg-white px-4 py-4">
    <ol class="breadcrumb text-primary fs-5 d-flex  align-items-center ">
        <% breadcrumbs.forEach(function(crumb, index) { %>
            <% if(index===breadcrumbs.length - 1) { %>
                <li class="" aria-current="page">
                   <span href="#" class="text-decoration-none badge bg-dark-subtle text-primary  small mx-2">
                    <%=recommandation.identifiant  %>
                   </span> 
                </li>
                <% } else { %>
                    <li class=""><a class="text-decoration-none badge bg-dark-subtle text-primary  small mx-2" href="<%= crumb.url %>">
                            <%= crumb.label %>
                        </a> 
                    </li>
                    <span class="fs-3 fw-light align-items-center"> >> </span>
                    <% } %>
                        <% }); %>
    </ol>
    <div class="row g-3">
        <div class="form-section-header border-info d-flex justify-content-between">
            <div class="">
                 <h3 class="fw-bold text-primary">
                <i class="bi bi-mortarboard-fill fs-1 me-2"></i>Informations sur l'etudiant
            </h3>
            </div>
           
        </div>
    
        <!-- Civilité -->
        <div class="col-md-1">
            <p class="form-label fw-semibold">Civilite : </p> <span><%=recommandation.civilite  %> </span>
        </div>
    
        <!-- Nom -->
        <div class="col-md-3">
            <p class="form-label fw-semibold">Nom Complet : </p> <span><%=recommandation.prenom  %> <%=diplome.nom  %> </span>
        </div>
    
        <!-- Filière -->
        <div class="col-md-2">
            <p class="form-label fw-semibold">Filiere : </p> <span > <%=recommandation.filiere  %> </span>
        </div>
    
        <!-- Niveau -->
        <div class="col-md-2">
            <p class="form-label fw-semibold">Niveau: </p> <span><%=recommandation.niveau %> </span>
        </div>
      <!-- Prénom -->
      <div class="col-md-2">
        <p class="form-label fw-semibold">Promotion: </p> <span><%=recommandation.promotion  %> </span>
    </div>
        <!-- Matricule -->
        <div class="col-md-2">
            <p class="form-label fw-semibold">Numéro matricule : </p> <span><%=recommandation.matricule  %> </span>
        </div>
    
    </div>
    <hr class="mx-4">
        

        <div class="form-section bg-white">
            <div class="form-section-header border-info">
                <h3 class="fw-bold text-primary">
                    <i class="bi bi-award fs-1 me-2"></i>Informations sur  demande d'Attestation
                </h3>
            </div>


            <div class="row">
               
                    <div class="col-md-4">
                        <p class="form-label fw-semibold">Id: </p> <span><%=recommandation.identifiant  %> </span>
                    </div>
                    <div class="mb-4">
                        <p class="form-label fw-semibold">diplome : </p> <span><%=recommandation.diplome  %> </span>
                    </div>
                   
            
            </div>
        </div>
</div>