<div class="container-fluid py-4">

    <%- include("../../partials/filsDAriane.ejs") %>
</div>
<div class="container-fluid bg-white py-4">
<form action="/demandes/create/recommandation" method="POST" >
    <%- include("../../partials/infoEtd.ejs") %>
    
    <div class="form-section-header border-success">
        <h3 class="fw-bold text-primary">
            <i class="bi bi-envelope-paper fs-1 me-2"></i>Informations sur la demande de Lettre de Recommandation
        </h3>
    </div>
    
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <label class="form-label fw-semibold">Type de lettre de recommandation</label>
            <select class="form-select" required id="typeLettre" name="type">
                <option value="" selected disabled>Choisir le type de lettre</option>
                <option value="universitaire">Universitaire (pour Master/Doctorat)</option>
                <option value="professionnelle">Professionnelle (pour emploi)</option>
                <option value="stage">Pour stage/alternance</option>
                <option value="bourse">Pour demande de bourse</option>
            </select>
        </div>
        
        <div class="col-md-3">
            <label class="form-label fw-semibold">Nom du destinataire</label>
            <input type="text" class="form-control" placeholder="Nom de l'établissement/entreprise" name="destinataire" required>
        </div>
        
        <div class="col-md-3">
            <label class="form-label fw-semibold">Poste/Programme visé</label>
            <input type="text" class="form-control" placeholder="Ex: Master en Informatique, Poste de Développeur..." name="programme" required>
        </div>
        
        <div class="col-md-3">
            <label class="form-label fw-semibold">Enseignant/professeur sollicité</label>
            <select class="form-select" required name="professeur">
                <option value="" selected disabled>Choisir un enseignant</option>
                <option value="Dr. Daouda Traore">Dr. Daouda Traore</option>
                <option value="Dr. Mahame Koita ">Dr. Mahame Koita </option>
                <option value="Dr. Solemane Coulibaly">Dr. Solemane Coulibaly</option>
                <option value="M. Moussa Cisse">M. Moussa Cisse</option>
            </select>
        </div>
        
        <div class="col-12">
            <label class="form-label fw-semibold">Informations complémentaires pour le rédacteur</label>
            <textarea class="form-control" rows="4" placeholder="Précisez les points importants à mentionner dans la lettre, vos motivations, vos compétences spécifiques..." name="infoSuplementaire"></textarea>
            <div class="form-text">Ces informations aideront le rédacteur à personnaliser votre lettre.</div>
        </div>

       
    </div>
    
    
</form>
   
</div>
