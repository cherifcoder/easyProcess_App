<div class="container-fluid  py-4">
    <%- include("../../partials/filsDAriane.ejs") %>
    <h4 class="mt-5 mb-3 text-primary">Appliquer un filtre</h4>
    <div class="d-flex justify-content-between " >
        <div class="mb-3 d-flex gap-3">
            <!-- Barre de recherche -->
            <form action="/demandes/stage" method="GET" class="d-flex gap-2">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Rechercher </label>
                    <input type="text" name="q" class="form-control" placeholder="Rechercher par nom, prénom, email...">
                </div>

                <!-- Filtre par filière -->

                <div class="col-md-2">
                    <label class="form-label fw-semibold">Filiere </label>
                    <select name="filiere" class="form-select">
                        <option value="">Toutes</option>
                        <option value="3ER">3ER</option>
                        <option value="AB">AB</option>
                        <option value="AG">AG</option>
                        <option value="CFA">CFA</option>
                        <option value="GI">GI</option>
                        <option value="HT">HT</option>
                        <option value="MA">MA</option>
                        <option value="MC">MC</option>
                    </select>
                </div>

                <!-- Filtre par promotion -->
                <div class="col-md-2">
                    <label class="form-label fw-semibold">Statut </label>
                    <select name="statut" class="form-select">
                        <option value="">Tous</option>
                        <option value="En attente">En attente</option>
                        <option value="Validee">Validee</option>
                        <option value="Rejetee">Rejetee</option>
                        
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label fw-semibold">Niveau </label>
                    <select name="niveau" class="form-select">
                        <option value="">Tous</option>
                        <option value="L1">L1</option>
                        <option value="L2">L2</option>
                        <option value="L3">L3</option>
                    </select>
                </div>

                <div class="col-md-1 d-flex flex-column justify-content-end">
                    <button type="submit" class="btn btn-primary border-0">
                        <i class="bi bi-search"></i>
                    </button>
                </div>

            </form>
        </div>
        <div class="align-content-center">
             <%- include("../../partials/btnAjout") %>
        </div>
       
    </div>
        
</div>
<div class="">
    <div class="form-section bg-white">
        <div class="form-section-header border-info">
            <h3 class="fw-bold text-primary">
                <i class="bi bi-briefcase fs-1 me-2"></i>Demandes de stage
            </h3>
        </div>

        <table class="table table-borderless table-hover table-responsive text-center border-0 shadow p-5">
            <thead class="bg-dark text-white">
                <th>Prenom et Nopm</th>
                <th>Demandeur</th>
                <th>Niveau</th>
                <th>Filière</th>
                <th>Promotion</th>
                <th>Matricule</th>
                <th>Type</th>
                <th>Durée</th>
                <th>Statut</th>
                <th>Actions</th>
            </thead>
            <tbody>
                <% stages.forEach(stage => { %>
                    <tr>
                        <td><%= stage.identifiant %></td>
                        <td><%= stage.prenom %> <%= stage.nom %></td>
                        <td><%= stage.niveau %></td>
                        <td><%= stage.filiere %></td>
                        <td><%= stage.promotion %></td>
                        <td><%= stage.matricule %></td>
                        <td><%= stage.type %></td>
                        <td><%= stage.duree %></td>
                        <td class="z-0 m-2 badge 
                            <%= stage.statut==='En attente' ? 'bg-primary-subtle text-primary' 
                            : stage.statut==='validee' ? 'bg-success-subtle text-success' 
                            : stage.statut==='rejetee' ? 'bg-danger-subtle text-danger' : '' %>">
                            <%= stage.statut %>
                        </td>
                        <td>
                            <a href="/demandes/stage/view/<%= stage.identifiant %>" 
                               class="badge bg-primary-subtle text-primary rounded-3 px-1 py-1">
                                <i class="bi bi-eye fs-4"></i>
                            </a>
                            <a href="/demandes/edit/stage/<%= stage.identifiant %>" 
                               class="badge bg-warning-subtle text-warning rounded-3 px-1 py-1">
                                <i class="bi bi-pen fs-4"></i>
                            </a>
                            <a action="/demandes/stage/delete/<%= stage.identifiant %>" method="POST"
                               class="badge bg-danger-subtle text-danger rounded-3 px-1 py-1">
                                <button class="bi bi-trash fs-4 text-danger bg-danger-subtle" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#deleteModal-<%= stage.identifiant %>"> 
                                </button>

                                <!-- Modal de confirmation -->
                                <div class="modal fade" id="deleteModal-<%= stage.identifiant %>" tabindex="-1" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Confirmation de suppression</h5>
                                                <button type="button" class="btn-close btn-close-white text-primary" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Voulez-vous vraiment supprimer la demande <strong><%= stage.identifiant %></strong> ?</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="reset" class="btn btn-primary border-0" data-bs-dismiss="modal">Annuler</button>
                                                <form action="/demandes/stage/delete/<%= stage.identifiant %>" method="POST">
                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
